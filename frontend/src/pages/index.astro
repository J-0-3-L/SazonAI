---
import Navbar from '../components/Navbar.astro';
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';

const title = 'SazonAI'
---

<Layout title={title}>
	<div class="fondo">	
		<Navbar />
		<h1>SazonAI</h1>
		<p>Escribe lo que tienes en la nevera. Nosotros cocinamos las ideas.</p>
	</div>
</Layout>
<style>
	.fondo{
		background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.7)),url('public/img/fondo.jpg');
		background-size: cover;
		height: 100vh;
	
	}
	h1{
		font-size: 150px;
		padding-top: 70px;
	}
	p{
		font-size: 20px;
	}


	h1, p{
		text-align: center;
		margin: 0;
	}
</style>

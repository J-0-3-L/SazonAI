---
import Footer from '../components/footer.astro';
import Navbar from '../components/Navbar.astro';
import Search from '../components/Search.astro';

import Layout from '../layouts/Layout.astro';

const title = 'SazonAI'
---

<Layout title={title}>
	<div class="fondo">	
		<Navbar />
		<div class="content">
			<h1>SazonAI</h1>
			<p>Escribe lo que tienes en la nevera. Nosotros cocinamos las ideas.</p>
			<Search />
		</div>
		<Footer />
	</div>
</Layout>
<style>
	.fondo{
		background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.7)),url('img/fondo.jpg');
		background-size: cover;
		height: 100vh;

		display: grid;
		min-height: 100dvh;
		grid-template-rows: 
			auto 1fr auto;

	}

	.content{
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	h1{
		font-size: 150px;
		padding-top: 70px;
	}
	p{
		font-size: 20px;
		padding-bottom: 50px;
	}

	h1, p{
		text-align: center;
		margin: 0;
	}
</style>
